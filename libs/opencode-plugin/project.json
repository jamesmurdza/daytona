{
  "name": "opencode-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/opencode-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "libs/opencode-plugin/dist",
        "main": "libs/opencode-plugin/src/index.ts",
        "tsConfig": "libs/opencode-plugin/tsconfig.json"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "libs/opencode-plugin/dist",
        "command": "npm publish --access public --registry https://registry.npmjs.org/"
      },
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
